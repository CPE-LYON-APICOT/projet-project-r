<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="r.project.GameController" >

    <!-- Zone du monstre -->
    <top>
        <VBox alignment="CENTER" spacing="10">
            <Label text="Monstre" />
            <!-- Cartes du monstre -->
            <FlowPane fx:id="monsterCardPane" HBox.hgrow="ALWAYS" />
            <!-- Points de vie du monstre -->
            <HBox spacing="10" alignment="CENTER">
                <Label text="Points de vie: " />
                <Label fx:id="monsterHealthLabel" />
            </HBox>
        </VBox>
    </top>

    <!-- Zone du joueur -->
  <bottom>
    <HBox alignment="CENTER">
        <GridPane alignment="CENTER" hgap="10">
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" />
                <ColumnConstraints hgrow="ALWAYS" />
                <ColumnConstraints hgrow="ALWAYS" />
                <ColumnConstraints hgrow="ALWAYS" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>
            <Label fx:id="card1LabelNom" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <ImageView fx:id="card1Image" fitWidth="100" fitHeight="150" preserveRatio="true" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <Label fx:id="card1LabelPV" GridPane.columnIndex="0" GridPane.rowIndex="2" >  
            <Label fx:id="card1LabelAttaque" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <Label fx:id="card2LabelNom" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <ImageView fx:id="card2Image" fitWidth="100" fitHeight="150" preserveRatio="true" GridPane.columnIndex="1" GridPane.rowIndex="1"  />
            <Label fx:id="card2LabelPV" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label fx:id="card2LabelAttaque" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label fx:id="card3LabelNom" GridPane.columnIndex="2" GridPane.rowIndex="0" />
            <ImageView fx:id="card3Image" fitWidth="100" fitHeight="150" preserveRatio="true" GridPane.columnIndex="2" GridPane.rowIndex="1"  />
            <Label fx:id="card3LabelPV" GridPane.columnIndex="2" GridPane.rowIndex="2" />
            <Label fx:id="card3LabelAttaque" GridPane.columnIndex="2" GridPane.rowIndex="3" />

            <Label fx:id="card4LabelNom" GridPane.columnIndex="3" GridPane.rowIndex="0" />
            <ImageView fx:id="card4Image" fitWidth="100" fitHeight="150" preserveRatio="true" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
            <Label fx:id="card4LabelPV" GridPane.columnIndex="3" GridPane.rowIndex="2" />
            <Label fx:id="card4LabelAttaque" GridPane.columnIndex="3" GridPane.rowIndex="3" />

            <Label fx:id="card5LabelNom" GridPane.columnIndex="4" GridPane.rowIndex="0" />
            <ImageView fx:id="card5Image" fitWidth="100" fitHeight="150" preserveRatio="true" GridPane.columnIndex="4" GridPane.rowIndex="1" />
            <Label fx:id="card5LabelPV" GridPane.columnIndex="4" GridPane.rowIndex="2" />
            <Label fx:id="card5LabelAttaque" GridPane.columnIndex="4" GridPane.rowIndex="3" />
        </GridPane>
        <!-- Points de vie du joueur -->
        <VBox alignment="CENTER" spacing="10">
            <Label text="Points de vie: " />
            <Label fx:id="playerHealthLabel" />
        </VBox>
    </HBox>
</bottom>


</BorderPane>

